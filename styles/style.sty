\newcommand{\titletxt}[1]{
	\vspace{8pt}
	{\boldfont\fontsize{14}{12}\selectfont #1}
}

\newcommand{\toptxt}[1]{
	\vspace{5pt}
	{\medfont\fontsize{10}{8}\selectfont #1}
}

\newcommand{\topsctxt}[1]{
	\vspace{5pt}
	{\lightfont\fontsize{10}{8}\selectfont #1}
}

\newcommand{\deftxt}[1]{
	{\lightfont\fontsize{9}{7}\selectfont #1}
}

